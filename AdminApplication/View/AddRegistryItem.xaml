<Window x:Class="AdminApplication.View.AddRegistryItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registry Input" Height="250" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Enter the new input to the registry:" HorizontalAlignment="Left" Margin="51,24,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NewItemTextBox" HorizontalAlignment="Left" Height="23" Margin="89,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="30,171,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        <Button Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="196,171,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>

    </Grid>
</Window>
